  <script src="https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js"></script>
  <script>
      function search() {
          let filter = document.getElementById('find').value;
          axios.get(`/search?query=${filter}`)
              .then(response => {
                  // Assuming your server returns an array of product IDs matching the search query
                  let productIds = response.data.productIds;
  
                  // Hide all products initially
                  let products = document.querySelectorAll('.products-col-item');
                  products.forEach(product => {
                      product.style.display = 'none';
                  });
  
                  // Show only the products that match the search results
                  productIds.forEach(productId => {
                      let product = document.querySelector(`[data-productId="${productId}"]`);
                      if (product) {
                          product.closest('.products-col-item').style.display = '';
                      }
                  });
              })
              .catch(error => {
                  console.error('Error searching:', error);
              });
      }
  </script>
  


    
     
