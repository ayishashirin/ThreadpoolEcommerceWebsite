<section class="products-area pb-70">
    <div class="container">
        <div class="section-title">
            <span class="sub-title">See Our Collection</span>


            <% if (newProducts.length === 0) { %>
            
                <div class="my-5">    
                    <div class="errNoProduct d-flex justify-content-center" >
                        <img src="/userSide/img/errorPages/no-product.png" width="300px" alt="No Data">
                    </div>
                    <div class="errNoProduct d-flex justify-content-center"><h3>Ooops! No products found.</h3></div>
                    </div>
                </div>





            <% }else{ %>
            <h2>Newly Launched Products </h2>
        </div>
       
       
            <div class="row">
                <% for( let i = 0; i < newProducts.length; i++ ) { %>
                <div class="col-lg-4 col-md-6 col-sm-6">
                <div class="shopItems" onclick="location.href='/productDetail/<%= newProducts[i]._id %>';">
                    <div class="single-products-box">
                        <div class="products-image">
                         <a href="/productDetail/<%= newProducts[i]._id %>">
    
                                <img src="<%= newProducts[i].variations[0].images[0] %>" class="main-image" alt="image">
                                <img src="<%= newProducts[i].variations[0].images[0] %>" class="hover-image" alt="image">
                            </a>
                            <div class="products-button">
                                <ul>
                                    <li>
                                        <div class="wishlist-btn">
                                          
                                            <a data-productId="<%= newProducts[i]._id %>">
                                                <i  data-productId="<%= newProducts[i]._id %>" class="bx bx-heart add-to-wishlist" ></i>
                                                <span class="tooltip-label">Add to Wishlist</span>
                                            </a>
                                        </div>
                                    </li>
                                    <li>
                                        <div class="compare-btn">
                                            <a href="#">
                                                <i class="bx bx-refresh"></i>
                                                <span class="tooltip-label">Compare</span>
                                            </a>
                                        </div>
                                    </li>
                                    <li>
                                        <div class="quick-view-btn">
                                            <a href="#" data-bs-toggle="modal" data-bs-target="#productsQuickView">
                                                <i class="bx bx-search-alt"></i>
                                                <span class="tooltip-label">Quick View</span>
                                            </a>
                                        </div>
                                    </li>
                                </ul>
                            </div>
                            <!-- <div class="new-tag">New!</div>
                            <div class="sale-tag">Sale!</div> -->
                        </div>
                        <div class="products-content">
                            <h3><a href="products-type-1.html"><%= newProducts[i].pName%></a></h3>
                            <div class="price">
                                <span class="old-price">$<%= newProducts[i].fPrice%></span>
                                <span class="new-price">$<%= newProducts[i].lPrice%></span>
                            </div>
                            <div class="star-rating">
                                <i class="bx bxs-star"></i>
                                <i class="bx bxs-star"></i>
                                <i class="bx bxs-star"></i>
                                <i class="bx bxs-star"></i>
                                <i class="bx bxs-star"></i>
                            </div>
                            <% if (newProducts[i].variations[0].quantity===0) { %>
                                <button class="buyBtn">Out Of Stock</button>
                                <% } else { %>
                                <% if (isCartItem) { %>
                                <a href="/addToCart" class="add-to-cart" style="cursor: pointer;">Go to Cart</a>
                                <% } else { %>
                                <a data-productId="<%= newProducts[i]._id %>" class="add-to-cart" style="cursor: pointer;">Add to
                                  Cart</a>
                                <% } %>
                                <% } %>
                        </div>
                    </div>
                    </div>
                </div>
                <% } %>

            </div>

            <% } %>

    </div>
</section>

<script src="/userSide/js/shop.js"></script>
