      <% for( let i = 0; i < category.length; i++ ) { %>
          <div class="modal fade" id="staticBackdrop<%= i %>" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-labelledby="staticBackdropLabel" aria-hidden="true">
            <div class="modal-dialog  modal-dialog-centered">
              <div class="modal-content">
                <div class="modal-header">
                  <h5 class="modal-title" id="staticBackdropLabel">Category Description</h5>
                  <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                  <%= category[i].description %>
                </div>
                <div class="modal-footer">
                  <button type="button" class="btn btn-danger" data-bs-dismiss="modal">Close</button>
                </div>
              </div>
            </div>
          </div>
      <% } %>
      <div class="popup" id="confirmation-popup">
        <h2>Confirmation</h2>
        <p>Are you sure you want to Delete <span class="cName text-capitalize"></span> category?</p>
        <div class="d-flex justify-content-end gap-2">
          <a class="dCat">
            <button id="confirm-btn">Yes</button>
          </a>
          <a>
            <button id="cancel-btn">No</button>
          </a>
        </div>
      </div>
      <div class="head-title">
        <div class="left">
          <h1>Category Management</h1>
          <ul class="breadcrumb">
            <li>
              <a href="#">Dashboard</a>
            </li>
            <li><i class="bx bx-chevron-right"></i></li>
            <li>
              <a class="active" href="/adminCategory Management">Category Management</a>
            </li>
          </ul>
        </div>
      </div>

      <div class="manageOptions">
          <a href="/adminAddCategory">
            <button>Add Category</button>
          </a>
          <a href="/adminUnlistedCategory">
            <button>Go To Unlisted Category</button>
          </a>
      </div>

