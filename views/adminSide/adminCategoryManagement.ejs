  <!-- header -->
  <%- include('../includes/adminSide/header') %>
  <!-- end of header -->

  <link rel="stylesheet" href="/adminSide/css/adminCategoryManagement.css" />   



<!-- CONTENT -->
<section id="content" style=" margin:40px;">
      
    <!-- MAIN -->
