                    </div>
                  </div>
                </div>
          <% } %>
          <% if (category.length === 0) { %>
                <div class="text-center">\(^Ð”^)/ <br>No Category.</div>
          <% } %>
        </div>
      </div>
      <% if (totalCategory !== 0) { %>
        <div class="row">
          <div class="col-12">
            <div class="text-center pagenationButton">
              <nav aria-label="Page navigation example">
                <ul class="pagination justify-content-center">
                  <li class="page-item">
                    <a class="page-link" href="/adminCategoryManagement?<%= filterCat?`Search=${filterCat}&`:'' %>page=<%= (currentPage === 1 || !currentPage)?1:(currentPage - 1) %>" aria-label="Previous">
                      <span aria-hidden="true">&laquo;</span>
                    </a>
                  </li>
                  <% for( let i = 0; i < (Math.ceil(totalCategory / 12)); i++ ) { %>
                    <li class="page-item"><a class="page-link" href="/adminCategoryManagement?<%= filterCat?`Search=${filterCat}&`:'' %>page=<%= (i + 1) %>" ><%= (i + 1) %></a></li>
                  <% } %>
                  <li class="page-item">
                    <a class="page-link" href="/adminCategoryManagement?<%= filterCat?`Search=${filterCat}&`:'' %>page=<%= (((Math.ceil(totalCategory / 12)) === currentPage) || (Math.ceil(totalCategory / 12)) && !currentPage)?(currentPage?currentPage:1):(currentPage === 1 || !currentPage)?2:(currentPage + 1) %>" aria-label="Next">
                      <span aria-hidden="true">&raquo;</span>
                    </a>
                  </li>
                </ul>
              </nav>
            </div>
          </div>
        </div>
      <% } %>
    </main>
    <!-- MAIN -->
  </section>
  <!-- CONTENT -->
<script>
  const cName = document.querySelector('.cName');
const dCat = document.querySelector('.dCat');

function showPopUp(id, name) {
	cName.innerHTML = `${name}`;
	dCat.setAttribute('href', `/adminSoftDeleteCategory/${id}`);
	document.getElementById('confirmation-popup').style.display = 'block';
};

document.getElementById('confirm-btn').addEventListener('click', function() {
	document.getElementById('confirmation-popup').style.display = 'none';
});

document.getElementById('cancel-btn').addEventListener('click', function() {
	document.getElementById('confirmation-popup').style.display = 'none';
});

</script>
