            <section class="content-main" style="padding-left: 340px;">
                <div class="content-header">
                    <div>
                        <h2 class="content-title card-title">Order List</h2>
                    </div>
                    
                </div>
                <div class="card mb-4">
                    <header class="card-header">
                        <div class="row gx-3">
                            <div class="col-lg-4 col-md-6 me-auto">
                                <form action="/adminFilterProducts" method="get">

                                <input type="text" placeholder="Search..." class="form-control" name="Search" spellcheck="false" required />
                            </form>

                            </div>
                            <form action="/adminOrderManagement" id="form-Filter" method="get">
                                <% if (currentPage) { %>
                                    <input name="page" type="text" value="<%= currentPage %>" hidden>
                                <% } %>
                                
                                <div class="col-lg-2 col-6 col-md-3">
                                <select class="form-select">
                                    <option value="All" <%= (filter === "All" || !filter)?"selected":"" %> >Show all</option>
                                    <option <%= (filter === "Ordered")?"selected":"" %> >Ordered</option>
                                    <option <%= (filter === "Shipped")?"selected":"" %> >Shipped</option>
                                    <option <%= (filter === "Delivered")?"selected":"" %> >Delivered</option>
                                    <option <%= (filter === "Cancelled")?"selected":"" %> >Cancelled</option>
                                </select>
                           
                            </div>
                            </form>
                        </div>
                    </header>
                    <!-- card-header end// -->
                    <div class="card-body">
                        <div class="table-responsive">
                            <table class="table table-hover">
                                <thead>
                                    <tr>
                                        <th>No</th>
                                        <th scope="col">Name</th>
                                        <th scope="col">Email</th>
                                        <th scope="col">Total</th>
                                        <th scope="col">Date</th>
                                        <th scope="col">Action</th> <!-- Add a new column for the action button -->
                                        
                                    </tr>
                                </thead>
                                <tbody>
                                    <% for( let i = 0; i < orders.length; i++ ) { %>
                                        <tr>
                                            <td><%= i + 1 %></td>
                                            <td><%= orders[i].userInfo[0].fullName %></td>
                                            <td><%= orders[i].userInfo[0].email %></td>
                                            <td>$<%= orders[i].orderItems.reduce((total, value) => total + (value.fPrice * value.quantity), 0) %>

                                            </td>

                                            <td><%=orders[i].orderDate.toISOString().split('T')[0].split('-').reverse().join('-')%></td>
                                            
                                              

                                                <td><a href="/adminOrderDetails?id=<%= orders[i]._id %>" class="btn btn-md rounded font-sm">Detail</a></td>
                                           
                                        </tr>
                                    <% } %>
                                </tbody>
                            </table>
                        </div>
                        <!-- table-responsive //end -->
                    </div>

                    <!-- card-body end// -->


                    <% if (orders.length === 0) { %>
                        <div class="text-center">\(^Ð”^)/ <br>No Orders.</div>
                    <% } %>
                    </div> 
