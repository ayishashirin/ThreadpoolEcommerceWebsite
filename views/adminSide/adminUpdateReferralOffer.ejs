 <!-- header -->
 <%- include('../includes/adminSide/header') %>
 <!-- end of header -->


    <!-- My CSS -->
    <link rel="stylesheet" href="/adminSide/css/adminUpdateReferralOffer.css" />

    
 

    <!-- CONTENT -->
    <section id="content" style="padding-left: 100px;">

      <!-- MAIN -->
      <main>
        <div class="head-title">
          <div class="left">
            <h1>Add Referral Offer</h1>
            <ul class="breadcrumb">
              <li>
                <a href="/adminHome">Dashboard</a>
              </li>
              <li><i class="bx bx-chevron-right"></i></li>
              <li>
                <a href="/adminAddReferralOffer">Referral Offer Management</a>
              </li>
              <li><i class="bx bx-chevron-right"></i></li>
              <li>
                <a class="active" href="/adminUpdateReferralOffer/<%= singleReferralOffer._id %>">Update Referral Offer</a>
              </li>
            </ul>
          </div>
        </div>

        <div class="manageOptions">
          <a href="/adminReferralOfferManagement">
            <button>Go Back</button>
          </a>
        </div>

        <div class="table-data justify-content-center">
          <div id="addProduct" class="order">
            <form id="updateForm" class="addProductForm" action="/adminUpdateReferralOffer/<%= singleReferralOffer._id %>" method="post">
              <h2 class="fs-3 text-black fw-bold text-center">Update Referral Offer</h2>
                <div class="d-flex align-items-center formRow">
                    <div class="<%= errMesg?.referralRewards?'err':'' %>">
                        <label for="name" class="d-block fs-6">Referral Amount</label>
                        <input class="name" type="number" name="referralRewards" value="<%= sDetails?.referralRewards?sDetails.referralRewards:singleReferralOffer.referralRewards %>">
                        <% if (errMesg?.referralRewards) { %>
                          <p class="err p-0 d-block text-danger"><%= errMesg.referralRewards %></p>
                        <% } %>
                    </div>
                </div>
                <div class="d-flex align-items-center formRow w-100">
                  <div class="w-100 <%= errMesg?.referredUserRewards?'err':'' %>">
                    <label for="name" class="d-block fs-6">Referred Amount</label>
                    <input class="name" type="number" name="referredUserRewards" value="<%= sDetails?.referredUserRewards?sDetails.referredUserRewards:singleReferralOffer.referredUserRewards %>" >
                    <% if (errMesg?.referredUserRewards) { %>
                      <p class="err p-0 d-block text-danger"><%= errMesg.referredUserRewards %></p>
                    <% } %>
                  </div>
                </div>
                <div class="d-flex align-items-center formRow w-100">
                  <div class="w-100 <%= errMesg?.discription?'err':'' %>">
                    <label for="name" class="d-block fs-6">Description</label>
                    <textarea name="discription" id="description" class="w-100" spellcheck="false"><%= sDetails?.discription?sDetails.discription:singleReferralOffer.discription %></textarea>
                    <% if (errMesg?.discription) { %>
                      <p class="err p-0 d-block text-danger"><%= errMesg.discription %></p>
                    <% } %>
                  </div>
                </div>
                <div class="d-flex align-items-center formRow w-100">
                  <div class="w-100 <%= errMesg?.expiry?'err':'' %>">
                    <label for="name" class="d-block fs-6">Expiry</label>
                    <input class="name" name="expiry" type="datetime-local" value="<%= sDetails?.expiry?sDetails.expiry:(new Date(singleReferralOffer.expiry)).toISOString().slice(0, 16) %>" >
                    <% if (errMesg?.expiry) { %>
                      <p class="err p-0 d-block text-danger"><%= errMesg.expiry %></p>
                    <% } %>
                  </div>
                </div>

                <div class="d-flex justify-content-center">
                    <button type="submit" class="addBtn">Update Referral Offer</button>
                </div>
            </form>
          </div>
        </div>
      </main>
      <!-- MAIN -->
    </section>
    <!-- CONTENT -->
    <script src="https://code.jquery.com/jquery-3.7.1.js" integrity="sha256-eKhayi8LEQwp4NKxN+CfCh+3qOVUtJn3QNZ0TciWLP4=" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/axios/1.6.7/axios.min.js" integrity="sha512-NQfB/bDaB8kaSXF8E77JjhHG5PM6XVRxvHzkZiwl3ddWCEPBa23T76MuWSwAJdMGJnmQqM0VeY9kFszsrBEFrQ==" crossorigin="anonymous" referrerpolicy="no-referrer"></script>
    
    <script src="/adminSide/js/adminUpdateReferralOffer.js"></script>

    <!-- fontawesome -->
    <script
      src="https://kit.fontawesome.com/23d1247997.js"
      crossorigin="anonymous"
    ></script>
    <!-- end of fontawesome -->
