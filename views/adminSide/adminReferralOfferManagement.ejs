    <!-- header -->
    <%- include('../includes/adminSide/header') %>
    <!-- end of header -->

    <!-- My CSS -->
    <link rel="stylesheet" href="/adminSide/css/adminReferralOfferManagement.css" />

 

    <!-- CONTENT -->
    <section id="content" style="padding-left: 100px;">
      <!-- MAIN -->
      <main>
        <div class="popup" id="confirmation-popup">
          <h2>Confirmation</h2>
          <p>Are you sure you want to Delete <span class="cName text-capitalize"></span>?</p>
          <div class="d-flex justify-content-end gap-2">
            <a class="dCat">
              <button id="confirm-btn">Yes</button>
            </a>
            <a>
              <button id="cancel-btn">No</button>
            </a>
          </div>
        </div>

        <div class="head-title">
          <div class="left">
            <h1>Referral Offer Management</h1>
            <ul class="breadcrumb">
              <li>
                <a href="#">Dashboard</a>
              </li>
              <li><i class="bx bx-chevron-right"></i></li>
              <li>
                <a class="active" href="/ReferralOfferManagement"
                  >Referral Offer Management</a
                >
              </li>
            </ul>
          </div>
        </div>

        <div class="manageOptions">
          <a href="/addReferralOffer">
            <button>Add Offer</button>
          </a>
         
        </div>

        <div class="table-data justify-content-center">
          <div class="order">
            <div class="d-flex align-items-center justify-content-between">
              
            </div>
            <% for( let i = 0; i < referralOffers.length; i++ ) { %>
              <div class="produts">
                <div
                  class="productImg d-flex align-items-center justify-content-between"
                >
                  <div class="proImg d-flex gap-3 align-items-center">
                      <p class="m-0 p-0 fs-6 text-capitalize fw-bolder">User Referral Offer</p>
                  </div>
                  <div class="dPrice">
                    <p class="m-0 text-capitalize fw-semibold">Offer Expiry: <%= referralOffers[i].expiry.toISOString().split("T")[0].split("-").reverse().join("-") %></p>
                  </div>
                  <div class="dPrice">
                    <p class="mb-2 p-0 fw-semibold">Referral Amount: $ <%= referralOffers[i].referralRewards %></p>
                    <p class="m-0 p-0 fw-semibold">Referred User Amount: $ <%= referralOffers[i].referredUserRewards %></p>
                  </div>
                  <div class="actions d-flex align-items-center stop">
                    <a href="/adminUpdateReferralOffer/<%= referralOffers[i]._id %>" title="Edit Product">
                      <svg
                        width="18"
                        height="18"
                        viewBox="0 0 18 18"
                        fill="none"
                        xmlns="http://www.w3.org/2000/svg"
                      >
                        <path
                          d="M2 16H3.425L13.2 6.225L11.775 4.8L2 14.575V16ZM0 18V13.75L13.2 0.575C13.4 0.391667 13.6208 0.25 13.8625 0.15C14.1042 0.05 14.3583 0 14.625 0C14.8917 0 15.15 0.05 15.4 0.15C15.65 0.25 15.8667 0.4 16.05 0.6L17.425 2C17.625 2.18333 17.7708 2.4 17.8625 2.65C17.9542 2.9 18 3.15 18 3.4C18 3.66667 17.9542 3.92083 17.8625 4.1625C17.7708 4.40417 17.625 4.625 17.425 4.825L4.25 18H0ZM12.475 5.525L11.775 4.8L13.2 6.225L12.475 5.525Z"
                          fill="black"
                        />
                      </svg>
                    </a>
                    <a onclick="showPopUp('<%= referralOffers[i]._id %>', 'User Referral Offer')" title="Delete Product">
                      <svg
                        width="15"
                        height="19"
                        viewBox="0 0 15 19"
                        fill="none"
                        xmlns="http://www.w3.org/2000/svg"
                      >
                        <path
                          d="M1.07143 16.8889C1.07143 18.05 2.03571 19 3.21429 19H11.7857C12.9643 19 13.9286 18.05 13.9286 16.8889V4.22222H1.07143V16.8889ZM15 1.05556H11.25L10.1786 0H4.82143L3.75 1.05556H0V3.16667H15V1.05556Z"
                          fill="black"
                        />
                      </svg>
                    </a>
                  </div>
                </div>
              </div>
            <% } %>
            <% if (referralOffers.length === 0) { %>
                <div class="text-center">\(^Ð”^)/ <br>No Referral.</div>
            <% } %>
          </div>
        </div>
      </main>
      <!-- MAIN -->
    </section>
    <!-- CONTENT -->
    <script src="https://code.jquery.com/jquery-3.7.1.js" integrity="sha256-eKhayi8LEQwp4NKxN+CfCh+3qOVUtJn3QNZ0TciWLP4=" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/axios/1.6.7/axios.min.js" integrity="sha512-NQfB/bDaB8kaSXF8E77JjhHG5PM6XVRxvHzkZiwl3ddWCEPBa23T76MuWSwAJdMGJnmQqM0VeY9kFszsrBEFrQ==" crossorigin="anonymous" referrerpolicy="no-referrer"></script>
    <script src="/adminSide/js/adminReferralOfferManagement.js"></script>

    <!-- fontawesome -->
    <script
      src="https://kit.fontawesome.com/23d1247997.js"
      crossorigin="anonymous"
    ></script>
    <!-- end of fontawesome -->
    <!-- Bootstrap script file -->
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL"
      crossorigin="anonymous"
    ></script>
    <!--end of Bootstrap script file -->
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script>
      const errMessage = '<%= referralErr %>';

      if(errMessage){
        Swal.fire({
          icon: "error",
          title: errMessage,
        });
      }
    </script>
  </body>
</html>
