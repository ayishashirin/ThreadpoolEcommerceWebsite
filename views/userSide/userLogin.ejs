        <div class="col-lg-6 col-md-6">
          <div class="login-content">
            <h2>Login</h2>

            <% if (isBlock) { %>
              <div class="error p-0 d-inline-block">
                <p>
                  <i class="fa-solid fa-circle-exclamation" style="color: #ff0000"></i>
                  This Account Is Blocked
                </p>
              </div>
              <% } %>
                <form class="login-form" action="/login" method="post">
                  <div class="form-group">
                    <input type="email" placeholder="email address"
                      class="form-control  <%= (errMesg?.email || invalid)?'errDiv':'' %>" name="email"
                      value="<%= errMesg?.userInfo?errMesg.userInfo:'' %> ayishashirin@gmail.com">
                  </div>
                  <p class="err <%= !errMesg?.email?'d-none':'' %>">
                    <%= errMesg?.email %>
                  </p>

                  <div class="form-group">
                    <input type="password"
                      class="form-control <%= (errMesg?.password || errMesg?.email || invalid)?'errDiv':'' %>"
                      placeholder="Password" name="password" value="Ayisha!2">
                  </div>
                  <p class="err <%= !errMesg?.password?'d-none':'' %>">
                    <%= errMesg?.password %>
                  </p>

                  <% if (invalid) { %>
                    <div class="error p-0 d-inline-block invalid">
                      <p>
                        <i class="fa-solid fa-circle-exclamation" style="color: #ff0000"></i>
                        <%= invalid %>
                      </p>
                    </div>
                    <% } %>

