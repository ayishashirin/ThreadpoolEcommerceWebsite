 <!-- header -->
 <%- include('../includes/userSide/header') %>
 <!-- end of header -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
    <!-- end of Bootstrap css cdn link -->
    <!-- Style css -->
    <link rel="stylesheet" href="/userSide/css/verifyOtp.css" />
    <!-- end of Style css -->
    
   

    <!-- main content -->
    <main>
        <section>
            <div class="container-fluid">
                <div class="row">
                    <div class="col-12 m-0 loginsection d-flex align-items-center justify-content-center">
                        <div class="loginbox">
                            <div class="headingLogin d-inline-block">
                                <p>Register</p>
                            </div>
                            <div class="inputForm d-inline-block">
                                <form action="/registerOtpVerify" method="post">
                                    <div>
                                    <label class="d-block" for="otp">Please enter the OTP sent to: <br> <br><span class="email"><%= email %></span></label>
                                </div>
                                    <input class="d-block <%= errorMesg?'errDiv':'' %>" type="number" name="otp"/>
                                    <p class="err <%= errorMesg?'':'d-none' %>"><%= errorMesg %></p>
                                    <label class="timeStamp d-block"><span class="seconds"><%= rTime?rTime:'60' %></span> seconds remaining</label>
                                    <a class="text-decoration-none" href="/userRegisterEmailVerifyResend"> <button type="button" class="resendbtn"> Resend OTP </button></a>
                                    <input type="text" value="" hidden class="remainingTime" name="rTime">
                                    <div class="text-center m-0" style="padding-top: 10px;">
                                        <button type="submit" class="default-btn">  Verify  </button>
                                    </div>
                                    <div></div>
                                    <div class="text-center m-0">
                                            
                                    </div>
                                </div>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>
    </main>
    <!-- end of main content -->

    <!-- footer -->
    <%- include('../includes/userSide/footer') %>
    <!-- end of footer -->
<script>
    const time = document.querySelector(".seconds");

    const cancelIntervel = setInterval(() => {
      if (Number(time.innerHTML) > 0) {
        document.querySelector(".remainingTime").value = `${
          Number(time.innerHTML) - 1
        }`;
        time.innerHTML = `${Number(time.innerHTML) - 1}`;
      } else {
        clearInterval(cancelIntervel);
        showButton();
      }
    }, 1000);
    
    function showButton() {
      document.querySelector(".resendbtn").style.display = "block";
    }
    
    try {
      document.querySelector('.shopByCat').addEventListener('click', ()=>{
        document.querySelector('#shopByCat').classList.toggle('display');
      });
    } catch (err) {
      console.error(err);
    }
</script>
    <!-- custom js -->
    <script src="/userSide/js/verifyOtp.js"></script>
    <!-- end of custom js -->
    <!-- fontawesome -->
    <script src="https://kit.fontawesome.com/23d1247997.js" crossorigin="anonymous"></script>
    <!-- end of fontawesome -->
    <!-- Bootstrap script file -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL" crossorigin="anonymous"></script>
    <!--end of Bootstrap script file -->
</body>
</html>